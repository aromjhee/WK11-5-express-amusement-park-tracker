extends layout.pug

block content
  h3= park.parkName
  div
    ul
      li Location: #{park.city}, #{park.provinceState} #{park.country}
      li Opened: #{park.opened}
      li Size: #{park.size}
  div
    p #{park.description}
  div
    a.btn.btn-primary(href=`/park/edit/${park.id}` role='button') Edit
    a.btn.btn-warning.ml-4(href=`/park/delete/${park.id}` role='button') Delete
    a.btn.btn-success.ml-4(href=`/parks` role='button') Return to List