extends layout.pug

block content
  h3= parkToDelete.parkName
  div
    p Proceed with deleting this park?
  div
    form(action=`/park/delete/${parkToDelete.id}` method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      button(class='btn btn-danger' type='submit') Delete Park
      a(class='btn btn-warning ml-2' href=`/park/${parkToDelete.id}` role='button') Cancel